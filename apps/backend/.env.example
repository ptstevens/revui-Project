# Database
DATABASE_URL="postgresql://revui:revui@localhost:5432/revui?schema=public"

# JWT Configuration
JWT_SECRET="your-jwt-secret-change-in-production"
JWT_EXPIRATION="7d"

# Application
NODE_ENV="development"
PORT=3000
CORS_ORIGIN="http://localhost:5173"

# Email (SendGrid or AWS SES)
EMAIL_FROM="noreply@revui.com"
EMAIL_PROVIDER="sendgrid"
SENDGRID_API_KEY="your-sendgrid-api-key"

# Cloudflare R2 (for recording storage)
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_BUCKET_NAME="revui-recordings"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
# Optional: Custom domain for public access (see docs/CLOUDFLARE_R2_SETUP.md)
# R2_PUBLIC_URL="https://cdn.yourdomain.com"

# Redis (optional for development)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
